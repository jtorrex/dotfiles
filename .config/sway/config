# Gaps
gaps inner 5
gaps outer 0
#smart_gaps on
smart_borders on

# focus the parent container
# bindsym $mod+a focus parent
workspace_auto_back_and_forth yes

# set mod key (Mod1=Alt, Mod4=Super)
set $mod Mod4
floating_modifier $mod

bindsym $mod+d exec rofi -show run
bindsym $mod+c exec clipcat-menu

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:Firacode 12

# Use Mouse+$mod to drag floating windows to their wanted position

# Back and forth between workspaces
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Tab+Shift workspace prev
bindsym $mod+Tab+Ctrl workspace next

# start a terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+Shift+q kill

# Focus follows mouse
focus_follows_mouse yes

# reload the configuration file
bindsym $mod+Shift+c reload

# Change focus (Vi keys)
bindsym $mod+j focus right
bindsym $mod+k focus up

# Move window (Vi keys)
bindsym $mod+Alt+h move left
bindsym $mod+Alt+j move down
bindsym $mod+Alt+k move up
bindsym $mod+Alt+l move right

# Horizontal split
bindsym $mod+b splith

# Vertical split
bindsym $mod+v splitv

# Change layout
bindsym $mod+s layout stacking; exec notify-send 'i3: stacked'
bindsym $mod+w layout tabbed; exec notify-send 'i3: tabbed'
bindsym $mod+e layout toggle split; exec notify-send 'i3: split'

# Toggle fullscreen
bindsym $mod+f fullscreen

# Toggle tiling and floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling and floating windows
bindsym $mod+space focus mode_toggle

# Focus parent/child container
bindsym $mod+a focus parent
#bindsym $mod+s focus child

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Media keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Sreen brightness
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+

# Screen saver
bindsym XF86ScreenSaver exec block

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86Search exec bemenu-run

# toggle flameshot
#bindsym $mod+Shift+x exec slurp | grim -g - ~/$(date +'ss%y-%m-%d-%H%M%S.png')
bindsym $mod+Shift+x exec grim -g "$(slurp)" - | swappy -f -

# Start Applications
bindsym $mod+F1 exec pcmanfm-qt
