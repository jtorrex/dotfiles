bindsym $mod+Shift+x exec grim -g "$(slurp)" - | swappy -f -

# Start Applications
bindsym $mod+F1 exec thunar
bindsym $mod+F2 exec pavucontrol
bindsym $mod+F9 exec screen-laptop.sh

#navigate workspaces next / previous
